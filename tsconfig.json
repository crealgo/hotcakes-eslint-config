{
	"compilerOptions": {
		"lib": [
			"ES6",
			"DOM"
		],
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"alwaysStrict": true,
		"noEmit": true,
		"module": "ES6",
		"target": "ES6",
		"allowUmdGlobalAccess": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"resolvePackageJsonImports": false,
		"resolvePackageJsonExports": false,
		"jsxImportSource": "react",
		"jsx": "react-jsx",
		"incremental": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx"
	],
	"exclude": [
		"node_modules"
	]
}
